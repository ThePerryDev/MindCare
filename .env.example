# ===================
# CONFIGURAÇÕES GERAIS
# ===================
NODE_ENV=development
PORT=3000

# ===================
# BANCO DE DADOS
# ===================
# MongoDB
MONGODB_URI=mongodb://admin:password123@mongodb:27017/mindcare?authSource=admin
MONGODB_TEST_URI=mongodb://admin:password123@mongodb-test:27017/mindcare_test?authSource=admin

# Credenciais MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=mindcare

# ===================
# AUTENTICAÇÃO
# ===================
# JWT Secret (gere uma chave segura para produção)
JWT_SECRET=sua-chave-jwt-super-secreta-aqui
JWT_EXPIRES_IN=7d

# ===================
# EXPO/REACT NATIVE
# ===================
# Configurações do Expo
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0

# URL da API (ajuste conforme necessário)
API_BASE_URL=http://localhost:3000/api

# ===================
# CONFIGURAÇÕES DE EMAIL
# ===================
# SMTP (configure conforme seu provedor)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
SMTP_FROM=noreply@mindcare.com

# ===================
# CONFIGURAÇÕES DE UPLOAD
# ===================
# Diretório para uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB em bytes

# ===================
# CONFIGURAÇÕES DE LOGS
# ===================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ===================
# CONFIGURAÇÕES DE CACHE
# ===================
# Redis (se implementado)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===================
# Debug
DEBUG=mindcare:*

# Hot reload
CHOKIDAR_USEPOLLING=true

# ===================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===================
# (Apenas para referência - configure no ambiente de produção)
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/mindcare
# JWT_SECRET=chave-jwt-super-secreta-e-complexa-para-producao
# NODE_ENV=production
# API_BASE_URL=https://api.mindcare.com

# ===================
# CONFIGURAÇÕES DE TESTES
# ===================
# Configurações específicas para testes
TEST_TIMEOUT=30000
JEST_TIMEOUT=10000

