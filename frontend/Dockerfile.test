# Dockerfile para testes do Frontend
FROM node:18-alpine

# Definir diretório de trabalho
WORKDIR /app

# Instalar dependências do sistema
RUN apk add --no-cache git bash

# Instalar ferramentas de teste e linting
RUN npm install -g jest eslint prettier

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências
RUN npm install

# Instalar dependências de desenvolvimento para testes
RUN npm install --save-dev jest @testing-library/react-native @testing-library/jest-native

# Copiar código fonte
COPY . .

# Comando padrão para executar testes
CMD ["npm", "test"]

